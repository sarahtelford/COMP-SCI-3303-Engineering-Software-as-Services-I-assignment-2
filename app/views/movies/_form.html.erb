<%= form_with(model: movie, html: { class: "ui form" }) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= select :movie, :rating, ['G','PG','PG-13','R'] %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field inline">
    <%= form.label :release_date %>
    <br/>
    <%= form.date_select :release_date %>
  </div>

  <div class="actions">
    <%= form.submit class: "ui primary button" %>
  </div>
<% end %>
